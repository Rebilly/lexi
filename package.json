{
    "name": "readability-reporter",
    "version": "0.1",
    "description": "Reports the readability scores for a pull request",
    "author": "Rebilly Inc",
    "repository": "https://github.com/Rebilly/readability-reporter",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "format": "prettier --write '**/*.ts'",
        "format-check": "prettier --check '**/*.ts'",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build --source-map --license licenses.txt",
        "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
        "run:local:report": "ts-node ./src/cli/report",
        "run:local:debugfile": "ts-node ./src/cli/debug-file.ts"
    },
    "dependencies": {
        "@actions/core": "^1.10.0",
        "@actions/exec": "^1.1.0",
        "@actions/github": "^5.1.1",
        "glob": "^7.1.7",
        "remark": "^13.0.0",
        "strip-markdown": "^4.0.0",
        "text-readability": "^1.0.5",
        "unist-util-visit": "2.0.3"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.2.5",
        "@typescript-eslint/parser": "^5.59.8",
        "@vercel/ncc": "^0.36.1",
        "commander": "^9.4.0",
        "eslint": "^8.42.0",
        "eslint-plugin-github": "^4.8.0",
        "eslint-plugin-jest": "^27.2.1",
        "jest": "^29.5.0",
        "js-yaml": "^4.1.0",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": false
    },
    "resolutions": {
        "text-readability/syllable/trim": "^0.0.3"
    }
}
